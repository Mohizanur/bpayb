# BirrPay Environment Configuration
# Copy this file to .env and fill in your actual values

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Firebase Configuration (JSON string)
FIREBASE_CONFIG={"type":"service_account","project_id":"your-project-id","private_key_id":"your-private-key-id","private_key":"-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----\n","client_email":"your-service-account@your-project.iam.gserviceaccount.com","client_id":"your-client-id","auth_uri":"https://accounts.google.com/o/oauth2/auth","token_uri":"https://oauth2.googleapis.com/token","auth_provider_x509_cert_url":"https://www.googleapis.com/oauth2/v1/certs","client_x509_cert_url":"https://www.googleapis.com/robot/v1/metadata/x509/your-service-account%40your-project.iam.gserviceaccount.com","universe_domain":"googleapis.com"}

# Server Configuration
PORT=8080
NODE_ENV=production

# Admin Configuration
ADMIN_USER_IDS=123456789,987654321

# Payment Configuration
PAYMENT_WEBHOOK_SECRET=your_webhook_secret_here

# SSL Configuration (for production)
SSL_CERT_PATH=/path/to/ssl/cert.pem
SSL_KEY_PATH=/path/to/ssl/private.key

# Database Configuration
DB_CONNECTION_TIMEOUT=30000
DB_RETRY_ATTEMPTS=3

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/birrpay/app.log

# Security Configuration
JWT_SECRET=your_jwt_secret_here
ENCRYPTION_KEY=your_encryption_key_here

# External API Configuration
PAYMENT_PROVIDER_API_KEY=your_payment_provider_api_key
PAYMENT_PROVIDER_BASE_URL=https://api.paymentprovider.com

# Monitoring Configuration
SENTRY_DSN=your_sentry_dsn_here
ANALYTICS_TRACKING_ID=your_analytics_id_here
