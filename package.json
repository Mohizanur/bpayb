{
  "name": "birrpay-clone-bot",
  "version": "1.0.0",
  "type": "module",
  "main": "src/index.js",
  "scripts": {
    "prestart": "node scripts/verify-env.js",
    "start": "cross-env NODE_ENV=production NODE_OPTIONS='--no-warnings=ExperimentalWarning --unhandled-rejections=strict' node -r ./scripts/suppress-debug.cjs src/index.js",
    "dev": "cross-env NODE_OPTIONS='--no-warnings=ExperimentalWarning' node --watch src/index.js",
    "test": "node --test tests/*.test.js",
    "test:watch": "node --test --watch tests/*.test.js",
    "test:coverage": "c8 node --test tests/*.test.js",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "build": "echo 'No build step required'",
    "postinstall": "node -e \"if (process.env.NODE_ENV === 'production') { console.log('Setting up debug module for production...'); const { execSync } = require('child_process'); execSync('npm install debug@4.3.4', { stdio: 'inherit' }); }\"",
    "serve": "cross-env NODE_OPTIONS='--no-warnings=ExperimentalWarning' node src/index.js",
    "check:services": "node scripts/checkServices.js",
    "prod": "cross-env NODE_ENV=production NODE_OPTIONS='--experimental-require' node -r ./scripts/suppress-debug.cjs src/index.js"
  },
  "dependencies": {
    "@fastify/send": "^2.0.1",
    "@fastify/static": "^7.0.4",
    "@google-cloud/firestore": "^7.11.3",
    "cross-env": "^10.0.0",
    "debug": "4.3.4",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "fastify": "^4.28.1",
    "firebase-admin": "^13.4.0",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^2.7.0",
    "telegraf": "^4.16.3",
    "telegraf-i18n": "^6.5.0",
    "uuid": "^10.0.0"
  },
  "engines": {
    "node": ">=18.20.2 <=20.x"
  },
  "devDependencies": {
    "c8": "^8.0.1",
    "eslint": "^8.54.0",
    "prettier": "^3.1.0",
    "supertest": "^6.3.3"
  },
  "keywords": [
    "telegram-bot",
    "subscription-management",
    "firebase",
    "birrpay",
    "ethiopia"
  ],
  "author": "BirrPay Team",
  "license": "MIT",
  "description": "BirrPay - Ethiopia's Premier Subscription Management Platform"
}
